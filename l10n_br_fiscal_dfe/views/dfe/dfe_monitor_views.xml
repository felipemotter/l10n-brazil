<odoo>

    <record model="ir.ui.view" id="dfe_monitor_form">
        <field name="name">l10n_br_fiscal.dfe_monitor.form</field>
        <field name="model">l10n_br_fiscal.dfe_monitor</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="DF-e Consult" duplicate="false">
                <header>
                    <button
                        name="search_documents"
                        string="Search Documents"
                        type="object"
                        class="btn-primary"
                    />
                </header>

                <sheet>
                    <group>
                        <group>
                            <field
                                name="company_id"
                                required="1"
                                domain="[('certificate_nfe_id', '!=', False)]"
                            />
                            <field name="last_nsu" required="1" />
                        </group>
                        <group>
                            <field name="last_query" readonly="1" />
                            <field name="use_cron" />
                            <field name="automatically_acknowledge_receipt" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Access Key">
                            <field name="dfe_access_key_id" nolabel="1" readonly="1" />
                        </page>
                        <page string="DF-e">
                            <field name="dfe_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="nsu" />
                                    <field name="dfe_access_key_id" />
                                    <field name="dfe_nfe_document_type" />
                                </tree>
                            </field>
                        </page>

                            </notebook>
                        </sheet>

                <div class="oe_chatter">
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="dfe_monitor_tree">
        <field name="name">l10n_br_fiscal.dfe_monitor.tree</field>
        <field name="model">l10n_br_fiscal.dfe_monitor</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree duplicate="false">
                <field name="company_id" required="1" />
                <field name="last_nsu" required="1" />
                <field name="last_query" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="dfe_monitor_action">
        <field name="name">Monitor NF-e</field>
        <field name="res_model">l10n_br_fiscal.dfe_monitor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="dfe_form_action">
        <field eval="2" name="sequence" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="dfe_monitor_form" />
        <field name="act_window_id" ref="dfe_monitor_action" />
    </record>

    <record model="ir.actions.act_window.view" id="dfe_tree_action">
        <field eval="1" name="sequence" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="dfe_monitor_tree" />
        <field name="act_window_id" ref="dfe_monitor_action" />
    </record>

    <record model="ir.ui.view" id="dfe_search">
        <field name="name">l10n_br_fiscal.dfe_monitor.search</field>
        <field name="model">l10n_br_fiscal.dfe_monitor</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search string="DF-e Consult">
                <field name="company_id" />
            </search>
        </field>
    </record>

</odoo>
